{
  "version": "0.2.0",
  "configurations": [
    
    {
      "type": "node",
      "request": "launch",
      "name": "Start Vite Dev Server",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["vite"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Dev + Browser",
      "configurations": ["Start Vite Dev Server", "Launch Chrome"]
    }
  ]
}
